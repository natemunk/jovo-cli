{
  "name": "root",
  "private": true,
  "workspaces": [
    "cli",
    "core",
    "commands/*",
    "integrations/*"
  ],
  "scripts": {
    "setup:dev": "npm i && npm run link && npm run build",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "prettier": "lerna run prettier",
    "link": "lerna run link",
    "eslint": "lerna run eslint",
    "test": "lerna run test -- --passWithNoTests",
    "preparePublish": "npm install && npm run build && npm run prettier && npm run eslint && npm run test",
    "updateVersions:minor": "lerna version minor --yes --no-push --no-git-tag-version",
    "updateVersions:patch": "lerna version patch --yes --no-push --no-git-tag-version",
    "publishPackages": "lerna publish from-package --yes --no-verify-access",
    "doPublish": "npm run updateVersions && npm run publishPackages"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "auto-changelog": "^2.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lerna": "8.1.2"
  }
}
